@model DentiCare.Models.Appointments.UndescribedDetails

@if (Model.AppointmentID > 0)
{
    using (Ajax.BeginForm("DescribeAppointment", "Appointments", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "div_booked_table",
        OnSuccess = "RefreshUndescribedDetails"
    },
        new { @class = "form-horizontal", role = "form" }))
    {

    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger col-md-4 col-md-offset-4" })

    <div class="panel-body">
        @Html.HiddenFor(m => m.AppointmentID)
        <div class="form-group">
            @Html.LabelFor(m => m.Comment, new { @class = "col-md-3 control-label labels_grey_right" })
            <div class="col-md-9">
                @Html.TextAreaFor(m => m.Comment, new { @class = "form-control blue_font", placeholder = "Komentarz" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Price, new { @class = "col-md-3 control-label labels_grey_right" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control blue_font", placeholder = "Cena" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-4">
                <button type="submit" class="btn btn-primary tooltipButton" data-placement="bottom" title="Zapisz opis wizyty">
                    <span class="glyphicon glyphicon-ok"></span>
                </button>
            </div>
        </div>
    </div>
    }
}
else
{
    <div class="panel-heading text-center" style="border-bottom: none; padding-top: 0; padding-bottom: 5px;">
        <h3 class="grey_font" style="font-weight: 600;">Wybierz pacjenta z listy</h3>
    </div>
}

<script>
    $(document).ready(function () {
        $("tooltipButton").tooltip();
    })
</script>
