<script>
    True = true; False = false;

    $(document).ready(function () {
        SetNavigationActive();
        SetScheduleNavHover();
        SetAppointmentsNavHover();
        SetAssistantAppointmentsNavHover();
        SetAllPatientsNavHover();
    });

    function SetNavigationActive() {
        var title = "@ViewBag.Title";
        $('#navigation > .nav-item').each(function () {
            $(this).removeClass('active');
        });
        switch (title) {
            //ADMIN
            case "Uzytkownicy": $(".admin-users-nav").addClass('active'); break;
            case "Baza zabiegow": $(".admin-treatments-nav").addClass('active'); break;

            //STOMATOLOG
            case "Najblizsze dni": $(".schedule-nav").addClass('active'); break;
            case "Dzisiejsze wizyty": $(".schedule-nav").addClass('active'); break;
            case "Wprowadz grafik": $(".schedule-nav").addClass('active'); break;
            case "Opisz wizyte": $(".undescribed-nav").addClass('active'); break;
            case "Baza pacjentow": $(".allPatients-nav").addClass('active'); break;
            case "Dokumentacja": $(".allPatients-nav").addClass('active'); break;

            //ASYSTENTKA
            case "Grafiki stomatologow": $(".doctorschedule-nav").addClass('active'); break;
            case "Wizyty dzisiejsze": $(".assistant-appointments-nav").addClass('active'); break;
            case "Zaaranzuj": $(".assistant-appointments-nav").addClass('active'); break;
            case "Odwolaj": $(".assistant-appointments-nav").addClass('active'); break;
            case "Baza uzytkownikow": $(".allUsers-nav").addClass('active'); break;

            //PACJENT
            case "Nadchodzace wizyty": $(".appointments-nav").addClass('active'); break;
            case "Umow wizyte": $(".appointments-nav").addClass('active'); break;
            case "Historia pacjenta": $(".appointments-nav").addClass('active'); break;

            //OGOLNE
            case "Wysylanie maila": $(".send-mail-nav").addClass('active'); break;
            case "Wyslij maila": $(".send-mail-nav").addClass('active'); break;

            case "Strona glowna": $(".home-nav").addClass('active'); break;
            case "Lekarze": $(".doctors-nav").addClass('active'); break;
            case "Cennik": $(".prices-nav").addClass('active'); break;
            case "Kontakt": $(".contact-nav").addClass('active'); break;
            case "Profil": $(".profile-nav").addClass('active'); break;
        }
    }

