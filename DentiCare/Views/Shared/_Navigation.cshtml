                $(".allPatients-nav > a:hover").css('color', 'white');
                $(".allPatients-nav > a").css('color', 'white');
            },
            function () {
                $(".allPatients-nav > a:focus").css('color', '#1981D3');
                $(".allPatients-nav > a:hover").css('color', '#1981D3');
                $(".allPatients-nav > a").css('color', '#777777');
