@model DentiCare.Models.UserSettings.PersonalDetails

<div class="modal fade col-md-offset-3 col-md-6 modal-color_margintop" id="modal_admin_personal">
    @using (Html.BeginForm("EditPersonalDetails", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="modal-content">
            <!--naglowek-->
            <div class="modal-header text-center">
                <button type="button" class="close" data-toggle="modal" data-target="#modal_admin_personal">&times;</button>
                <h2 class="modal-title" style="">Edycja danych personalnych</h2>
            </div>
            <!--tresc-->
            <div class="modal-body">
                <div class="panel panel-success col-md-12">
                    <div class="panel-body">

                        <div class="form-group">
                            @Html.HiddenFor(m => m.PersonalID)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Imię" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Nazwisko" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Gender, new { @class = "col-md-4 control-label" })
                            <div class="col-md-4">
                                @Html.DropDownListFor(m => m.Gender,
                                        new SelectList(new List<string> { "Kobieta", "Mężczyzna" }),
                                        new { @class = "form-control", placeholder = "Twoja płeć" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(m => m.RegisterDate)
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-4">
                                <button id="modal_edit_personal_btn" type="submit" class="btn btn-primary tooltipButton" data-dissmiss="modal"
                                        data-placement="bottom" title="Zapisz zmiany">
                                    <span class="glyphicon glyphicon-ok"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $(".tooltipButton").tooltip();
    })
</script>
