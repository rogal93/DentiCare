@model DentiCare.Models.UserSettings.AddressDetails

<div class="modal fade col-md-offset-3 col-md-6 modal-color_margintop" id="modal_admin_address">
    @using (Html.BeginForm("EditAddress", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="modal-content">
            <!--naglowek-->
            <div class="modal-header text-center">
                <button type="button" class="close" data-toggle="modal" data-target="#modal_admin_address">&times;</button>
                <h2 class="modal-title">Edycja danych adresowych</h2>
            </div>
            <!--tresc-->
            <div class="modal-body">
                <!--Dane adresowe-->
                <div class="panel panel-success col-md-12">
                    <div class="panel-body">

                        <div class="form-group">
                            @Html.HiddenFor(m => m.AddressID)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.PostalCode, new { @class = "col-md-4 control-label" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", placeholder = "00-000" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.City, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "Miejscowość" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Street, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Street, new { @class = "form-control", placeholder = "Ulica" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.HouseNumber, new { @class = "col-md-4 control-label" })
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.HouseNumber, new { @class = "form-control", placeholder = "Nr domu" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ApartmentNumber, new { @class = "col-md-4 control-label" })
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.ApartmentNumber, new { @class = "form-control", placeholder = "Nr mieszkania" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.PostalCity, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.PostalCity, new { @class = "form-control", placeholder = "Miejscowość poczty" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-4">
                                <button id="modal_edit_address_btn" type="submit" class="btn btn-primary tooltipButton" data-dissmiss="modal"
                                        data-placement="bottom" title="Zapisz zmiany">
                                    <span class="glyphicon glyphicon-ok"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $(".tooltipButton").tooltip();
    })
</script>
