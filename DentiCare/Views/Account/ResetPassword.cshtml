@model DentiCare.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Zresetuj hasło";
}

<div class="container">
    <h1 class="text-center text-primary col-md-12" style="font-weight: 600;">@ViewBag.Title</h1>

    <div style="margin-top: 100px;" class="grey_font">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger col-md-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-2" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-4 col-sm-5 col-xs-7">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control blue_font", placeholder = "Twój adres mailowy" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-4 col-sm-5 col-xs-7">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control blue_font", placeholder = "Nowe hasło" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-4 col-sm-5 col-xs-7">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control blue_font", placeholder = "Potwierdzenie hasła" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-4 col-sm-offset-5 col-xs-offset-5">
                    <button type="submit" class="btn btn-primary tooltipButton" data-placement="bottom" title="Zresetuj hasło">
                        <span>Reset</span>
                    </button>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $("tooltipButton").tooltip();
    })
</script>
