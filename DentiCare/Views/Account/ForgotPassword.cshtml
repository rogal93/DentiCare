@model DentiCare.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Zapomniałeś hasła?";
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <h1 class="text-center text-primary col-md-12" style="font-weight: 600;">Przypomnienie hasła</h1>
        @Html.ValidationSummary("", new { @class = "text-danger col-md-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-2" })
        <div style="margin-top: 100px;" class="grey_font">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-5 col-sm-4 labels_grey_right control-label" })
                <div class="col-md-4 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control blue_font", placeholder = "Twój adres mailowy" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-4 col-sm-offset-4 col-xs-offset-5">
                    <button type="submit" class="btn btn-primary tooltipButton" data-placement="bottom" title="Wyślij link">
                        <span class="glyphicon glyphicon-ok"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $("tooltipButton").tooltip();
    })
</script>
