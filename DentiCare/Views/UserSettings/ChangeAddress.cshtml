@model DentiCare.Models.UserSettings.NewAddressViewModel
@{
    ViewBag.Title = "Zmień adres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/UserSettings/UserSettings.css" rel="stylesheet" />

<div class="container">

    <h1 class="text-center text-primary col-md-12" style="font-weight: 600;">@ViewBag.Title</h1>

    <div style="margin-top: 100px;" class="grey_font">
        @using (Html.BeginForm("ChangeAddress", "UserSettings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger col-md-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-2" })

            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-2 col-sm-3 col-xs-5">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control blue_font", placeholder = "000-000-000" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.City, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-4 col-sm-5 col-xs-7">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control blue_font", placeholder = "Miejscowość" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Street, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-4 col-sm-5 col-xs-7">
                    @Html.TextBoxFor(m => m.Street, new { @class = "form-control blue_font", placeholder = "Ulica" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.HouseNumber, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-2 col-sm-2 col-xs-4">
                    @Html.TextBoxFor(m => m.HouseNumber, new { @class = "form-control blue_font", placeholder = "Dom" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApartamentNumber, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-2 col-sm-2 col-xs-4">
                    @Html.TextBoxFor(m => m.ApartamentNumber, new { @class = "form-control blue_font", placeholder = "Nr" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PostalCode, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-2 col-sm-2 col-xs-4">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control blue_font", placeholder = "00-000" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PostalCity, new { @class = "col-md-5 col-sm-5 col-xs-5 labels_grey_right control-label" })
                <div class="col-md-4 col-sm-5 col-xs-7">
                    @Html.TextBoxFor(m => m.PostalCity, new { @class = "form-control blue_font", placeholder = "Miejscowość poczty" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-4 col-sm-offset-5 col-xs-offset-5">
                    <button type="submit" class="btn btn-primary tooltipButton" data-placement="bottom" title="Zmień adres">
                        <span class="glyphicon glyphicon-ok"></span>
                    </button>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $("tooltipButton").tooltip();
    })
</script>
