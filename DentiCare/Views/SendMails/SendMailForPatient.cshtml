@model DentiCare.Models.SendMails.MailFromPatientViewModel

@{
    ViewBag.Title = "Wysylanie maila";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center text-primary col-md-12" style="font-weight: 600;">Wyślij maila</h1>

    <div style="margin-top: 100px;" class="grey_font">
        @using (Html.BeginForm("SendMailForPatient", "SendMails", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger col-md-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-2" })

            <div class="form-group text-center" style="margin-top: 20px;">
                @Html.LabelFor(m => m.Receiver, new { @class = "col-md-5 col-sm-4 col-xs-7 labels_grey_right control-label", style = "padding-top: 7px;" })
                @Html.DropDownListFor(m => m.Receiver, new SelectList(Model.NamesOfDoctors, "Key", "Value"), new { @class = "form-control col-md-7 col-md-offset-0 col-sm-8 col-sm-offset-0 col-xs-8 col-xs-offset-2 text-primary blue_font" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "col-md-5 col-sm-4 col-xs-7 labels_grey_right control-label" })
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control col-md-7 col-md-offset-0 col-sm-8 col-sm-offset-0 col-xs-8 col-xs-offset-2 blue_font", placeholder = "Tytuł wiadomości" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Body, new { @class = "col-md-5 col-sm-4 col-xs-7 labels_grey_right control-label" })
                @Html.TextAreaFor(m => m.Body, 10, 1,  new { @class = "form-control col-md-7 col-md-offset-0 col-sm-8 col-sm-offset-0 col-xs-8 col-xs-offset-2 blue_font", placeholder = "Treść wiadomości" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-4 col-sm-offset-4 col-xs-offset-4">
                    <button type="submit" class="btn btn-primary tooltipButton" data-placement="bottom" title="Wyślij">
                        <span class="glyphicon glyphicon-share" style="margin-right: 5px;"></span>Wyślij
                    </button>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $("tooltipButton").tooltip();
    })
</script>

