@model DentiCare.Models.SendMails.Mail

<div class="panel-heading text-center">
    <h3>Wiadomość</h3>
</div>
<div class="panel-body">
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-3 text-right control-label", style = "padding-top: 5px;" })
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control blue_font", placeholder = "Tytuł wiadomości" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Body, new { @class = "col-md-3 text-right control-label", style = "padding-top: 5px;" })
        @Html.TextAreaFor(m => m.Body, 10, 1, new { @class = "form-control blue_font", placeholder = "Treść wiadomości" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-5">
            <button id="send_btn" type="button" class="btn btn-primary tooltipButton" data-placement="bottom" title="Wyślij">
                <span class="glyphicon glyphicon-share" style="margin-right: 5px;"></span>Wyślij
            </button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".tooltipButton").tooltip();
    });
</script>
